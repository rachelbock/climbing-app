<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greyBackground"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/climb_row_grade_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/climb_row_grade"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/climb_row_grade_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/climb_row_style_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/climb_row_style"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/climb_row_style_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="crimp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/climb_row_project_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/climb_row_project"
            android:layout_marginBottom="10dp"
            />
        <CheckBox
            android:id="@+id/climb_row_project_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/climb_row_completed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/climb_row_completed"
            android:layout_marginBottom="10dp"
            />
        <CheckBox
            android:id="@+id/climb_row_completed_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/climb_row_route_color_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/climb_row_route_color"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:id="@+id/climb_row_route_color_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:background="@color/blueBackground"
            />
    </LinearLayout>
</LinearLayout>

    <Button
        android:id="@+id/climb_row_comments_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/climb_row_comments"
        />
</LinearLayout>