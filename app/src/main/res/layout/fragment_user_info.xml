<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rage.clamber.Fragments.UserInfoFragment"
    android:layout_margin="5dp"
    >

    <Button
        android:id="@+id/user_info_fragment_about_me_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update My Info"
        />

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="2dp"
    android:layout_below="@id/user_info_fragment_about_me_button"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/greyBackground"
        >
        <TextView
            android:id="@+id/user_fragment_recommendations_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="History"
            android:textSize="@dimen/page_title_text"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/user_activity_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>
