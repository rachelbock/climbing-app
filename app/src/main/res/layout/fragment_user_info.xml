<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rage.clamber.Fragments.UserInfoFragment"
    android:layout_margin="5dp"
    >

<LinearLayout
    android:id="@+id/user_info_fragment_top_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="2sp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="2dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/greyCardViewBackground"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Preferences"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="2dp"
    android:layout_weight="1"
    app:cardBackgroundColor="@color/greyCardViewBackground"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="2sp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Height Ft"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Height Inches"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Skill Level"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="2dp"
    android:layout_below="@id/user_info_fragment_top_linear_layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/greyBackground"
        >
        <TextView
            android:id="@+id/user_fragment_recommendations_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/recommendations"
            android:textSize="@dimen/page_title_text"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/user_activity_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>
